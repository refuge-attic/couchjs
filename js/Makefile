JS_FILE= ../main.js

JS_FILE_COMPONENTS= json2.js \
					filter.js \
					mimeparse.js \
					render.js \
					state.js \
					util.js \
					validate.js \
					views.js \
					loop.js

all: $(JS_FILE)

$(JS_FILE):
	@mkdir -p `dirname $(JS_FILE)`
	@echo "// DO NOT EDIT THIS FILE BY HAND" > $@
	@echo >> $@
	@cat $(JS_FILE_COMPONENTS) >> $@


clean:
	@rm -f $(JS_FILE) 
